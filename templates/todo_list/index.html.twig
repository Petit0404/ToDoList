{% extends "base.html.twig" %}

{% block body %}
    <div class="container d-flex flex-wrap">
        {% for list in lists %}
            <div class="card m-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title" style="color: {{ list.color }}">{{ list.name }}</h5>
                        {% for task in list.tasks %}
                            <p class="card-text">
                                <input type="checkbox" {{ task.completed ? "checked" : "" }} onchange="window.location.href='/update-task-status/{{ task.id }}'">
                                {{ task.title }}
                                <a href="/update-task/{{ task.id }}" class="text-info"><i class="fas fa-edit"></i></a>
                                <a href="/delete-task/{{ task.id }}" class="text-danger"><i class="fas fa-trash"></i></a>
                            </p>
                        {% endfor %}
                    <div style="text-align:end; padding:1em">
                        <a href="/create-task/{{ list.id }}" class="btn btn-outline-success"><i class="fas fa-plus"></i> Ajouter une t√¢che</a>
                    </div>
                    <a href="/update-list/{{ list.id }}" class="btn btn-outline-info"><i class="fas fa-edit"></i></a>
                    <a href="/delete-list/{{ list.id }}" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}